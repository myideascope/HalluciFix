# AWS RDS PostgreSQL Configuration
# Copy this file to .env.local and update with your RDS credentials

# RDS Connection Settings
RDS_HOST=your-rds-instance.region.rds.amazonaws.com
RDS_PORT=5432
RDS_DATABASE=hallucifix
RDS_USERNAME=postgres
RDS_PASSWORD=your-secure-password

# Alternative Database Environment Variables (for compatibility)
DATABASE_HOST=your-rds-instance.region.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=hallucifix
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password

# AWS Region
AWS_REGION=us-east-1

# RDS Proxy Configuration (optional)
RDS_PROXY_ENDPOINT=your-proxy-endpoint.proxy-xyz.region.rds.amazonaws.com
USE_RDS_PROXY=false

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_CONNECTION_TIMEOUT=60000

# SSL Configuration
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Migration Settings
MIGRATION_DATA_DIR=./infrastructure/migration-data
MIGRATION_BACKUP_DIR=./infrastructure/migration-backup

# Legacy Supabase Settings (keep during migration)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key