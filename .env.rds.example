# AWS RDS PostgreSQL Configuration
# Copy this file to .env.local and update with your RDS credentials

# Primary Database Connection (PostgreSQL connection string format)
# This takes precedence over individual connection parameters
DATABASE_URL=postgresql://username:password@your-rds-instance.region.rds.amazonaws.com:5432/hallucifix?sslmode=require

# Individual Database Connection Parameters (fallback if DATABASE_URL not set)
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=hallucifix
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_SSL=true

# Legacy compatibility (for services not yet migrated)
DATABASE_HOST=your-rds-instance.region.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=hallucifix
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password

# AWS Region
AWS_REGION=us-east-1

# RDS Proxy Configuration (optional)
RDS_PROXY_ENDPOINT=your-proxy-endpoint.proxy-xyz.region.rds.amazonaws.com
USE_RDS_PROXY=false

# Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Performance and Monitoring
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# Migration Settings
MIGRATION_DATA_DIR=./infrastructure/migration-data
MIGRATION_BACKUP_DIR=./infrastructure/migration-backup

# Legacy Supabase Settings (keep during migration)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key