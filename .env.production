# HalluciFix Production Environment Configuration
# This file contains production-specific defaults

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# NODE_ENV is handled by Vite automatically - do not set it in .env files
VITE_APP_NAME=HalluciFix

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_DESTINATION=external

# Feature Flags for Production
VITE_ENABLE_MOCK_SERVICES=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_BETA_FEATURES=false

# Migration Configuration (Disabled in production)
VITE_ENABLE_MIGRATION_MODE=false
VITE_ENABLE_AUTH_SWITCHER=false
VITE_DEFAULT_AUTH_MODE=cognito

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_PROFILE=hallucifix-prod

# AWS RDS Database (Production)
# These should be set via environment variables or AWS Secrets Manager
# DATABASE_URL=postgresql://username:password@prod-endpoint:5432/hallucifix
DB_SSL=true
DB_MAX_CONNECTIONS=50

# AWS Bedrock (Production)
VITE_BEDROCK_ENABLED=true
VITE_BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Connection settings optimized for production
DB_CONNECTION_POOL_SIZE=20
DB_QUERY_TIMEOUT=30000

# Enable read replicas in production
VITE_ENABLE_READ_REPLICAS=true

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# Production AI service settings
VITE_OPENAI_MODEL=gpt-4
VITE_OPENAI_MAX_TOKENS=4000
VITE_OPENAI_TEMPERATURE=0.1

VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229
VITE_ANTHROPIC_MAX_TOKENS=4000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Configuration for production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Production monitoring settings
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.01

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting for production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

