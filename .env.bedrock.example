# AWS Bedrock Configuration
# Copy this file to .env.local and configure your Bedrock settings

# Enable Bedrock integration
VITE_BEDROCK_ENABLED=true

# AWS Configuration
VITE_AWS_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your_access_key_here
VITE_AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Model Configuration
VITE_BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# Alternative models:
# VITE_BEDROCK_MODEL=anthropic.claude-3-haiku-20240307-v1:0  # Faster, cheaper
# VITE_BEDROCK_MODEL=anthropic.claude-3-opus-20240229-v1:0   # Most capable, expensive
# VITE_BEDROCK_MODEL=amazon.titan-text-express-v1            # Amazon's model

# Provider Configuration
VITE_AI_PRIMARY_PROVIDER=bedrock
VITE_AI_FALLBACK_CHAIN=bedrock,mock

# Analysis Configuration
VITE_AI_DEFAULT_SENSITIVITY=medium
VITE_AI_MAX_TOKENS=2000
VITE_AI_TEMPERATURE=0.3

# Cost and Rate Limiting
VITE_AI_ENABLE_COST_TRACKING=true
VITE_AI_MAX_REQUESTS_PER_MINUTE=60
VITE_AI_DAILY_COST_LIMIT=10.00

# Caching Configuration
VITE_AI_ENABLE_CACHING=true
VITE_AI_CACHE_TIMEOUT=1800000  # 30 minutes in milliseconds

# Health Check Configuration
VITE_AI_ENABLE_HEALTH_CHECKS=true
VITE_AI_HEALTH_CHECK_INTERVAL=300000  # 5 minutes in milliseconds

# Development/Testing
VITE_AI_ENABLE_MOCK_FALLBACK=true
VITE_AI_MOCK_DELAY=500  # Simulate processing delay in ms