{
  "notifications": {
    "slack": {
      "enabled": true,
      "webhook_secret": "SLACK_WEBHOOK_URL",
      "channels": {
        "failures": "#test-failures",
        "reports": "#test-reports",
        "performance": "#performance-alerts"
      },
      "triggers": {
        "test_failure": true,
        "coverage_regression": true,
        "performance_regression": true,
        "daily_report": true,
        "weekly_report": true
      }
    },
    "github_issues": {
      "enabled": true,
      "labels": {
        "test_failure": ["test-failure", "automated", "bug", "priority-high"],
        "performance_regression": ["performance", "regression", "automated", "priority-medium"],
        "coverage_regression": ["coverage", "regression", "automated", "priority-low"]
      },
      "assignees": {
        "test_failure": [],
        "performance_regression": [],
        "coverage_regression": []
      }
    },
    "email": {
      "enabled": false,
      "smtp_config": {
        "host": "smtp.example.com",
        "port": 587,
        "secure": false,
        "auth": {
          "user": "notifications@example.com",
          "pass": "password"
        }
      },
      "recipients": {
        "failures": ["dev-team@example.com"],
        "reports": ["qa-team@example.com"],
        "performance": ["performance-team@example.com"]
      }
    }
  },
  "thresholds": {
    "coverage": {
      "global_minimum": 80,
      "critical_modules_minimum": 90,
      "regression_threshold": 2
    },
    "performance": {
      "max_test_duration": {
        "unit": 30000,
        "integration": 60000,
        "e2e": 300000
      },
      "regression_threshold_percent": 20
    },
    "test_success_rate": {
      "minimum": 95,
      "warning_threshold": 98
    }
  },
  "reporting": {
    "dashboard": {
      "enabled": true,
      "retention_days": 30,
      "update_frequency": "on_completion"
    },
    "trends": {
      "enabled": true,
      "history_length": 100,
      "metrics": [
        "coverage_percentage",
        "test_count",
        "success_rate",
        "execution_time"
      ]
    },
    "artifacts": {
      "retention_days": {
        "test_results": 7,
        "coverage_reports": 30,
        "performance_reports": 90,
        "dashboards": 30
      }
    }
  },
  "schedules": {
    "daily_health_check": "0 9 * * *",
    "weekly_report": "0 9 * * 1",
    "monthly_trend_analysis": "0 9 1 * *"
  }
}